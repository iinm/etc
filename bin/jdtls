#!/usr/bin/env sh

jdtls_dir=$TOOLS/opt/eclipse.jdt.ls/org.eclipse.jdt.ls.product/target/repository
workspace=~/.jdtls-workspace

case $(uname) in
    "Darwin" )
        os=mac
        ;;
    "Linux" )
        os=linux
        ;;
esac

if test ! -d $workspace; then
    mkdir -p $workspace
fi

# todo https://github.com/redhat-developer/vscode-java/wiki/Lombok-support

java \
    -Declipse.application=org.eclipse.jdt.ls.core.id1 \
    -Dosgi.bundles.defaultStartLevel=4 \
    -Declipse.product=org.eclipse.jdt.ls.core.product \
    -noverify \
    -Xms1G \
    -jar $jdtls_dir/plugins/org.eclipse.equinox.launcher_1.*.jar \
    -configuration $jdtls_dir/config_$os/ \
    -data $workspace \
    --add-modules=ALL-SYSTEM --add-opens java.base/java.util=ALL-UNNAMED --add-opens java.base/java.lang=ALL-UNNAMED \
    "$@"
